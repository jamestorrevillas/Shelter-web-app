{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "*/*",
        "destination": "/pages/home.html"
      },
      {
        "source": "**",
        "destination": "/pages/home.html"
      },
      {
        "source": "/pages/login.html",
        "destination": "/login.html"
      },
      {
        "source": "/register.html",
        "destination": "/pages/register.html"
      },
      {
        "source": "/about.html",
        "destination": "/pages/about.html"
      }
    ]
  }
}
