{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "*/*",
        "destination": "/pages/home.html"
      },
      {
        "source": "**",
        "destination": "/pages/home.html"
      },
      {
        "source": "/login.html",
        "destination": "/pages/login.html"
      },
      {
        "source": "/register.html",
        "destination": "/pages/register.html"
      },
      {
        "source": "/about.html",
        "destination": "/pages/about.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
